<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/size_8"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/track_img"
        android:layout_width="@dimen/size_45"
        android:layout_height="@dimen/size_45"
        android:src="@drawable/ic_music" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/size_5"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_8"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/trackTextPrime"
            android:textSize="@dimen/size_16"
            tools:ignore="SpUsage"
            tools:text="Название композиции" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/size_5"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/track_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:textColor="@color/trackText"
                android:textSize="@dimen/size_11"
                tools:ignore="SpUsage"
                tools:text="Имя исполнителя" />

            <ImageView
                android:layout_width="@dimen/size_13"
                android:layout_height="@dimen/size_13"
                android:src="@drawable/ic_dot" />

            <TextView
                android:id="@+id/track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/trackText"
                android:textSize="@dimen/size_11"
                tools:ignore="SpUsage"
                tools:text="Продолжительность трека" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_marginVertical="@dimen/size_8"
        android:src="@drawable/track_arrow" />

</LinearLayout>